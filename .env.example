# ============================================
# PRIVY SIGNING SERVICE - ENVIRONMENT CONFIG
# ============================================

# -------------------- Основные настройки --------------------
ENVIRONMENT=development

# -------------------- Database (Audit Logs) --------------------
POSTGRES_DB=privy_signing_audit
POSTGRES_PASSWORD=secure_password_here
POSTGRES_USER=privy_signing
POSTGRES_PORT=5432
POSTGRES_HOSTNAME=localhost
DATABASE_DIALECT=postgresql

# -------------------- Copytrading Database (READ-ONLY + Replay Protection) --------------------
COPYTRADING_DATABASE_URL=postgresql+asyncpg://user:password@host:port/copytrading

# -------------------- Privy Configuration --------------------
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# -------------------- Security --------------------
SERVICE_TOKEN=generate_secure_token_here
ALLOWED_IPS_ORDER=91.99.224.254
ALLOWED_IPS_ALLOWANCE=91.99.224.254
ALLOWED_IPS_TRANSFER=91.99.224.254

# -------------------- Rate Limiting (0 = unlimited) --------------------
MAX_SIGNATURES_PER_MINUTE=0
MAX_DAILY_VOLUME_USDC=0.0

# -------------------- Platform Settings --------------------
PLATFORM_COMMISSION_PERCENTAGE=1.0
COMMISSION_TOLERANCE=0.1

# -------------------- Polymarket Contracts (Polygon) --------------------
POLYMARKET_CTF_EXCHANGE=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
POLYMARKET_NEG_RISK_CTF_EXCHANGE=0xC5d563A36AE78145C45a50134d48A1215220f80a

# -------------------- Token Addresses (Polygon) --------------------
USDC_ADDRESS=0x3c499c542cEF5E3811e1192ce70d8cC03d5c3359
USDCE_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# -------------------- Team Wallets (comma-separated, lowercase) --------------------
TEAM_WALLETS=0x1234...,0x5678...

# -------------------- Alerts (Optional) --------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# -------------------- Activity Validation --------------------
ENABLE_ACTIVITY_VALIDATION=true
